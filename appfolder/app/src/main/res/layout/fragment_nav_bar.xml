<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/nav_bar_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Beacon"
            android:textColor="@color/beacon_title_text_color"
            android:textSize="47sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="3"></Space>

        <ImageButton
            android:id="@+id/filterButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_tune_settings"
            android:background="@color/clear"
            app:tint="@color/filter_button_icon_color"
            android:padding="15dp"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight=".2"></Space>

        <ImageButton
            android:id="@+id/friendListButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_person_calender"
            android:background="@color/clear"
            app:tint="@color/friend_list_button_icon_color"
            android:padding="15dp"
            />
    </LinearLayout>
</RelativeLayout>