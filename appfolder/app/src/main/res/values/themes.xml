<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Appfolder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue_medium</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark</item>
        <item name="colorSecondaryVariant">@color/gray_medium</item>
        <item name="colorOnSecondary">@color/blue_darker</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:colorControlActivated">@color/radar</item>
        <item name="android:colorControlNormal">@color/gray_medium</item>
        <!-- Customize your theme here. -->
    </style>
</resources>